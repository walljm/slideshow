{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "C#: Slideshow Debug",
          "type": "dotnet",
          "request": "launch",
          "projectPath": "${workspaceFolder}/SlideshowApp.csproj",
          "env": {
            "DOTNET_ENVIRONMENT": "Development"
          }
        },
      
        {
            "name": "Debug Slideshow App (macOS)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0-maccatalyst/maccatalyst-arm64/SlideshowApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "preLaunchTask": "debug-build",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            },
            "requireExactSource": false
        },
        {
            "name": "Debug with dotnet run (macOS)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run",
                "--framework", 
                "net8.0-maccatalyst",
                "--configuration",
                "Debug"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "preLaunchTask": "debug-build",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Slideshow App (macOS)",
            "type": "coreclr",
            "request": "launch",
            "program": "open",
            "args": [
                "${workspaceFolder}/bin/Debug/net8.0-maccatalyst/maccatalyst-arm64/SlideshowApp.app"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "preLaunchTask": "build"
        },
        {
            "name": "Launch with dotnet run (macOS)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run",
                "--framework", 
                "net8.0-maccatalyst",
                "--launch-profile",
                "Default"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "preLaunchTask": "build",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Slideshow App (Windows)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run",
                "--framework", 
                "net8.0-windows10.0.19041.0",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "preLaunchTask": "build",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
    ]
}
