{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "debug-build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug",
				"--verbosity",
				"quiet"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Run Slideshow App",
			"type": "shell",
			"command": "dotnet run --framework net8.0-maccatalyst",
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"dependsOn": "build"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		}
	]
}